<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="uz.bismillah.siyrat.presentation.main.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_detailsInfoFragment"
            app:destination="@+id/detailsInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsInfoFragment"
        android:name="uz.bismillah.siyrat.presentation.main.siyrat.details_info.DetailsInfoFragment"
        android:label="DetailsInfoFragment"
        tools:layout="@layout/fragment_details_info" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="uz.bismillah.siyrat.presentation.settings.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/casesFragment"
        android:name="uz.bismillah.siyrat.presentation.cases.CasesFragment"
        android:label="CasesFragment"
        tools:layout="@layout/fragment_cases" />
</navigation>